<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/agriMate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/lobstertwo_bold"
        android:text="AgriMate"
        android:textColor="@color/material_green"
        android:textSize="48sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/paddyCare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Paddy Care"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/agriMate"
        app:layout_constraintStart_toStartOf="@+id/agriMate"
        app:layout_constraintEnd_toEndOf="@+id/agriMate" />

    <TextView
        android:id="@+id/paddyVarietyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-medium"
        android:text="Upload Variety"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/paddyCare"
        app:layout_constraintStart_toStartOf="@+id/paddyCare"
        app:layout_constraintEnd_toEndOf="@+id/paddyCare" />

    <!-- Scrollable Form -->
    <ScrollView
        android:layout_width="370dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paddyVarietyTitle">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Basic Details -->
            <EditText
                android:id="@+id/deletePaddyVariety"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-medium"
                android:hint="Delete Paddy Variety Name"
                android:paddingLeft="10dp" />

            <Button
                android:id="@+id/deleteScheduleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="Delete Schedule" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>